<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Payed_des">

    <RelativeLayout
        android:padding="15dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_tv"
                    android:text="Not Intialised"
                    android:textColor="@color/Red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">



                    <Button
                        android:id="@+id/btn_Collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collect" />

                    <Button
                        android:id="@+id/btn_verify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify" />

                    <Button
                        android:id="@+id/btn_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment" />
                </LinearLayout>


                <TableLayout
                    android:id="@+id/table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="Segue ui"
                            android:text="Name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tot_name"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="AAAAABBB AAAAAABBB AAAAAABB"
                            android:textSize="15sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="Segue ui"
                            android:text="Identification"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tot_identification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="Segue ui"
                            android:text="Amount"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tot_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="30sp" />
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="Segue ui"
                            android:text="Print "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tot_cmonths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp" />


                    </TableRow>

                </TableLayout>


                <ImageView
                    android:id="@+id/print_vw"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_pay"
                    android:layout_gravity="bottom"
                    android:text="pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tb_p"
        android:elevation="5dp"
        app:fabSize="mini"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>